# Etapa 1: Build de producci칩n
FROM node:20 AS builder

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Etapa 2: Servidor Nginx para archivos est치ticos
FROM nginx:alpine

# Elimina configuraci칩n por defecto
RUN rm -rf /usr/share/nginx/html/*

# Copia archivos de build
COPY --from=builder /app/dist /usr/share/nginx/html

# Copia configuraci칩n personalizada de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
